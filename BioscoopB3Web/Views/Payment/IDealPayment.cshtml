@model BioscoopB3Web.Models.IDealPaymentViewModel

@{
    ViewBag.Title = "iDEAL Betaling";
}

<link href="~/Content/InputValidation.css" rel="stylesheet" />

<div class="text-center">
    <img src="https://www.ecommerce-europe.eu/app/uploads/2016/07/IDEAL-logo.gif" />
</div>
<div class="panel-body">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
    <div class="text-center">
        <div class="form-group">
            <label>Selecteer uw bank: </label>
            <select class="form-control" id="bank" name="bank" style="width: 200px; margin-left: auto; margin-right: auto">
                <option>ABN AMBRO</option>
                <option>ING</option>
                <option>Rabobank</option>
                <option>SNS</option>
                <option>ASN Bank</option>
                <option>RegioBank</option>
                <option>bunq</option>
                <option>Knab</option>
                <option>Triodos Bank</option>
                <option>Van Lanschot</option>
            </select>
        </div>
        <div class="form-group" style="width: 200px; margin-left: auto; margin-right: auto">
            <label>Vul uw IBAN in: </label><br />
            @Html.TextBoxFor(x => x.IBAN, new { @class = "form-control" })
        </div>
        <div class="form-group" style="width: 200px; margin-left: auto; margin-right: auto">
            <label>Vul uw kaartnummer in: </label><br />
            @Html.TextBoxFor(x => x.Card, new { @class = "form-control" })
        </div>
        <input type="submit" value="Betalen" class="btn btn-success"/> 
    </div>
    }
</div>
    