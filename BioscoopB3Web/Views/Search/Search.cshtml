@model IEnumerable<BioscoopB3Web.Domain.Entities.Movie>  

@{
    ViewBag.Title = "Search";
}

<h2>Zoekresultaat</h2>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThreeD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subtitles)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0) { <tr> <td colspan = "5"> Film niet gevonden </td>
    </tr>
    }

@foreach (var item in Model)
{
    <tr>
        <td>
            <a href="@Url.Action("Description", "Movie", new { MovieID = item.MovieID })">@item.Title</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThreeD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subtitles)
        </td>
    </tr>
}

</table>
