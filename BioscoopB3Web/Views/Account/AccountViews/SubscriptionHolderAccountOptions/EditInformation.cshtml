@model BioscoopB3Web.Domain.Entities.Account
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gegevens bewerken";
}

@{
    string AccountMail = (string)(Session["AccountMail"]);
    string AccountType = (string)(Session["AccountType"]);
}

<br />

<div class="container">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_SubscriptionHolderMenu")
        </div>
        <div class="col-md-9">
            <div class="row well">
                <div class="col-md-6">Account mail: @AccountMail</div>
                <div class="col-md-6">Account type: @AccountType</div>
            </div>
            @if (ViewBag.Success != null)
            {
                <div class="row">
                    <div class="well col-md-12">
                        <p class="text-center" style="font-weight:bold; color: green;">@ViewBag.Success<p></p>
                    </div>
                </div>
            }
            @if (ViewBag.NoSuccess != null)
            {
                <div class="row">
                    <div class="well col-md-12">
                        <p class="text-center" style="font-weight:bold; color: red;">@ViewBag.NoSuccess<p></p>
                    </div>
                </div>
            }
            <div class="row well">
                
                <link href="~/Content/InputValidation.css" rel="stylesheet" />
                @using (Html.BeginForm("EditInformation", "SubscriptionHolderAccount", FormMethod.Post))
                {
                    @Html.ValidationSummary()
                    <div class="form-group col-md-6">
                        <label>Voornaam:</label>
                        @Html.EditorFor(x => x.Name, new { @class = "form-control" })
                    </div>
                        <div class="form-group col-md-6">
                            <label>Achternaam:</label>
                            @Html.EditorFor(x => x.LastName, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            <label>Straatnaam:</label>
                            @Html.EditorFor(x => x.Street, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            <label>Huisnummer:</label>
                            @Html.EditorFor(x => x.StreetNumber, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            <label>Stad:</label><br />
                            @Html.EditorFor(x => x.City, new { @class = "form-control" })
                        </div>

                        <div class="row">
                            <div class="text-center col-md-12">
                                <input class="btn btn-success btn-lg" type="submit" value="Bewerk gegevens" />
                            </div>
                        </div>
                        @Html.HiddenFor(x => x.AccountType, new { Value = Model.AccountType })
                        @Html.HiddenFor(x => x.Email, new { Value = Model.Email })
                        @Html.HiddenFor(x => x.Password, new { Value = Model.Password })

                }

            </div>
        </div>
    </div>
</div>