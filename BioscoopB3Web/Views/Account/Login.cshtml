@model BioscoopB3Web.Models.LoginModel

@{
    ViewBag.Title = "Inloggen";
}

<br/>

<link href="~/Content/InputValidation.css" rel="stylesheet" />
<div class="container">
    <div class="col-md-3">
        </div>
        <div class="panel panel-success col-md-6">
            <div class="panel-heading panel-success text-center"><h1>Inloggen</h1></div>
            <div class="panel-body">
                @{
                    if (ViewBag.NoAccount != null || ViewBag.WrongPassword != null)
                    {
                        if (ViewBag.NoAccount != null)
                        {
                            <div class="well text-center">
                                <p style="color: red;">@ViewBag.NoAccount</p>
                                <a href="@Url.Action("Index", "Account")"><div class="text-center btn btn-warning buttonNav Movie-button">Registreer</div></a>
                            </div>
                        }
                        if (ViewBag.WrongPassword != null)
                        {
                            <div class="well">
                                <p style="color: red;">@ViewBag.WrongPassword</p>
                            </div>
                        }
                    }
                }
                @using (Html.BeginForm("Login", "Account"))
            {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label>Jouw email:</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Wachtwoord: </label>
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                    </div>
                    <div class="text-center">
                        <input class="btn btn-success" type="submit" value="Login" />
                    </div>

                }
            </div>
        </div>
        </div>





